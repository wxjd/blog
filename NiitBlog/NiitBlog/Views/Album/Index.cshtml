                </div>
                <div class="album-thumbnails">
                    <ul class="thumbnails">
                        <li class="span4">
                            <ul>
                                @foreach (AlbumsViewModel album in ViewData["albums1"] as List<AlbumsViewModel>)
                                {
                                    <li>
                                        <form enctype="multipart/form-data" method="post">
                                            <input type="hidden" value="@album.AlbumID" name="albumid" />
